@Article{photonics12100966,
AUTHOR = {Tharaka, Dasun and Withanage, Abisheka and Kahatapitiya, Nipun Shantha and Abhayapala, Ruvini and Wijenayake, Udaya and Wijethunge, Akila and Ravichandran, Naresh Kumar and Silva, Bhagya Nathali and Jeon, Mansik and Kim, Jeehyun and Kumarasinghe, Udayagee and Wijesinghe, Ruchire Eranga},
TITLE = {Optical Coherence Imaging Hybridized Deep Learning Framework for Automated Plant Bud Classification in Emasculation Processes: A Pilot Study},

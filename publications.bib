@Article{s24165398,
AUTHOR = {Kalupahana, Deshan and Kahatapitiya, Nipun Shantha and Silva, Bhagya Nathali and Kim, Jeehyun and Jeon, Mansik and Wijenayake, Udaya and Wijesinghe, Ruchire Eranga},
TITLE = {Dense Convolutional Neural Network-Based Deep Learning Pipeline for Pre-Identification of Circular Leaf Spot Disease of Diospyros kaki Leaves Using Optical Coherence Tomography},
JOURNAL = {Sensors},
